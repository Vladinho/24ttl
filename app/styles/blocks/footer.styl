.footer
	position absolute
	bottom 0
	left 0
	width 100%
	height 100px
	background-color #000

	&__partner
		display none
		margin-right 30px
		padding-top 20px
		float right
		height 100%

		&-text
			margin-bottom 14px
			font-family ubuntu-r
			font-size 14px
			color #fff
			opacity .6
			filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=10)')
			text-transform uppercase
			letter-spacing 1.7px

	&__logo
		width 105px
		height 30px
		line-height 30px
		display inline-block
		text-align center
		background-color #fff
		border-left 10px solid $trn

		& + &
			margin-left 8px

		&_color

			&_yellow
				border-color #fcc900

			&_light-blue
				border-color #57b7ed

			&_blue
				border-color #246189

	&__yandex
		margin-top 4px
		display inline-block
		vertical-align top
		sprite($logo-yandex)

	&__google
		margin-top 6px
		display inline-block
		vertical-align top
		sprite($logo-google)

	&__vk
		margin-top 8px
		display inline-block
		vertical-align top
		sprite($logo-vk)

	&__copy
		padding 25px 30px
		display inline-block
		height 100%
		line-height 19px
		font-family ubuntu-b

		&_font_reg
			font-family ubuntu-r

		&-logo
			margin-right 13px
			display inline-block
			font-size 19px
			text-transform uppercase
			text-decoration none
			color #fff
			opacity .6
			filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=50)')
			letter-spacing 3px

		&-est
			padding-left 15px
			display inline-block
			font-size 13px
			text-transform uppercase
			color #fff
			letter-spacing 1.5px
			border-left 3px solid rgba(255, 255, 255, .1)
			opacity .6
			filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=50)')

		&-law
			margin-top 13px
			padding-left 5px
			font-family ubuntu-r
			font-size 13px
			color #fff
			letter-spacing 1.6px
			opacity .6
			filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=50)')

@media only screen and (max-width: 320px)
	.footer
		height 165px

		&__partner
			margin 0
			padding-top 10px
			float none
			height auto
			font-size 0

			&-text
				margin-bottom 10px
				padding 0 20px
				font-size 12px
				opacity .3
				filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=30)')

		&__logo

			& + &
				margin-left 0

		&__copy
			padding 40px 20px

			&-law
				margin-top 6px
				padding-left 0
