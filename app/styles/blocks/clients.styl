.clients

	&-container
		margin 0 auto
		padding 150px 0 81px
		width 1400px
		text-align justify
		font-size 0

	&__item
		margin-bottom 95px
		height 68px
		display inline-block

		& + &
			margin-left 98px

		&_height_0
			margin-bottom 0 !important
			height 0 !important

		&_width

			&_1600
				margin-left 0 !important

			&_1000
				margin-left 98px !important

	&__logo
		display inline-block
		vertical-align middle


