.menu
	position fixed
	z-index 100
	top 0
	right 0
	padding 45px 50px 35px
	width 400px
	height 100%
	background-color #fcfcfc
	transform translateX(100%)
	transition transform .5s ease

	&_state_open
		transform translateX(0)

	&__btn-close
		position absolute
		top 37px
		right 48px
		size(35px)
		cursor pointer

		&:before
		&:after
			position absolute
			top 15px
			left -5px
			size(45px, 3px)
			content ''
			background-color $menu-elem
			transition background-color .3s ease

		&:before
			transform rotate(45deg)

		&:after
			transform rotate(-45deg)

		&:hover

			&:before
			&:after
				background-color #000

	&__lang
		font-size 0
		display none

		&-item
			padding-bottom 5px
			display inline-block
			font-family officina-book-r
			font-size 16px
			color $menu-text
			text-transform uppercase
			letter-spacing 1px
			border-bottom 3px solid $menu-elem
			transition all .3s ease
			cursor pointer

			& + &
				margin-left 18px

			&:hover
				color #000
				border-color #000

	&__nav
		margin-top 86px

		&-item
			margin-bottom 33px

			&:last-child
				margin 0

		&-link
			font-family ubuntu-l
			font-size 16px
			color $menu-text
			text-decoration none
			transition color .3s ease

			&:hover
				color #000

	&__contacts
		position absolute
		bottom 35px
		left 50px
		width 300px

		&-item
			display block

			& + &
				margin-top 5px

		&-link
			font-family ubuntu-r
			font-size 12px
			color #000
			transition color .3s ease
			text-decoration none

			&:hover
				color $menu-text

	&__icons
		margin-bottom 28px
		padding-bottom 24px
		font-size 0
		border-bottom 3px solid #000

	&__icon
		display inline-block
		display none

		&_vk
			sprite($icon-vk)

			&:hover
				spritePosition($icon-vk-hover)

		&_fb
			position relative
			top 3px
			sprite($icon-fb)

			&:hover
				spritePosition($icon-fb-hover)

		&_tw
			sprite($icon-tw)

			&:hover
				spritePosition($icon-tw-hover)

		&_g
			sprite($icon-g)

			&:hover
				spritePosition($icon-g-hover)

		& + &
			margin-left 32px

@media only screen and (max-width: 320px)
	.menu
		padding 20px 20px 0
		width 320px

		&__contacts
			bottom 20px
			left 20px
			width 280px

		&__icons
			margin-bottom 15px
			padding-bottom 15px

		&__btn-close
			top 20px
			right 20px

		&__nav
			margin-top 35px

			&-item
				margin-bottom 23px


