.header
	position relative
	z-index 1
	margin 0 auto
	width 100%
	height 895px
	overflow hidden

	&__logo
		position absolute
		z-index 10
		top 30px
		left 43px
		font-family ubuntu-b
		font-size 27px
		color #fff
		letter-spacing 3.5px
		text-decoration none
		text-transform uppercase
		display none

	&__menu-icon
		position absolute
		z-index 99
		top 42px
		right 52px
		size(28px, 23px)
		cursor pointer

		&:before
			position absolute
			top 10px
			left 0
			width 100%
			height 3px
			content ''
			background-color #fff
			box-shadow 0 -10px #fff, 0 10px #fff
			transition box-shadow .3s ease

		&:hover

			&:before
				box-shadow 0 -14px #fff, 0 14px #fff

	&__slider
		position absolute !important
		z-index 3 !important
		top 0
		left 0
		width 100%
		height 700px

		&-slide
			position absolute
			z-index 4
			top 0
			left 0
			padding 250px 0 100px
			width 100%
			height 100%
			color #fff

		&-title
			margin 0 auto
			size(185px, 112px)

			img
				width 100%

		&-text
			margin-top 70px
			font-family officina-book-r
			font-size 50px
			text-align center

			span
				font-size 30px


		.swiper-wrapper
			position relative

		img
			width 100%
			height 100%
			position relative
			z-index 1

		&-pagination
			position absolute
			z-index 4
			bottom 47px
			width 100%
			text-align center

	&__video
		size(100%)

		&-mask
			position absolute
			z-index 2
			top 0
			left 0
			size(100%)
			background-color #000
			opacity .5
			display none

		video
			position absolute
			z-index 1
			bottom 0
			left 0
			width 100%

.note
	padding 1.5% 0
	width 100%
	background-color #fff

	&__text
		margin 0 auto
		width 1100px
		color #000
		font-family ubuntu-r
		font-size 16px
		line-height 28px
		text-align center

@media only screen and (max-width: 320px)
	.header
		height 220px

		&-wrap
			position fixed
			z-index 100
			top 0
			left 0
			width 320px
			height 40px
			background-color #000

		&__menu-icon
			top 12px
			left 274px
			height 15px
			width 25px

			&:before
				top 7px
				height 2px
				box-shadow 0 -7px #fff, 0 7px #fff

			&:hover

				&:before
					box-shadow 0 -7px #fff, 0 7px #fff

		&__logo
			top 13px
			left 20px
			font-size 15px
			letter-spacing 2px

		&__slider
			padding-top 40px
			height 500px
			box-sizing content-box

			&-pagination
				bottom 20px

			&-slide
				padding 60px 20px 0

			&-title
				width 75px
				height 50px

			&-text
				margin 10px 0 0
				width auto
				font-size 18px
				line-height 18px

				span
					font-size 10px
					line-height 10px

			img
				width 1142px
				height 500px

